<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para los textos -->
    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>  <!-- Usamos un color del archivo colors.xml -->
    </style>

    <!-- Estilo para los títulos -->
    <style name="TitleStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>  <!-- Usamos un color del archivo colors.xml -->
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para los botones -->
    <style name="ButtonStyle">
        <item name="android:background">@color/buttonColor</item>  <!-- Color de fondo para el botón -->
        <item name="android:textColor">@color/buttonTextColor</item>  <!-- Color del texto del botón -->
        <item name="android:textSize">14sp</item>
        <item name="android:padding">16dp</item>  <!-- Relleno dentro del botón -->
    </style>

</resources>
